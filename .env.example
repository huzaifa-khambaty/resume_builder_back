# =============================
# Application Configuration
# =============================
APP_NAME=Next Match
NODE_ENV=development
PORT=4000

# URLs
BACKEND_URL=http://localhost:4000
FRONTEND_URL=http://localhost:5173

# =============================
# Database Configuration
# =============================
DB_HOST=localhost
DB_NAME=nextmatch
DB_USERNAME=postgres
DB_PASSWORD=postgres

# =============================
# Authentication
# =============================
# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth - Facebook
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# OAuth - LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=10

# =============================
# Email / SMTP
# =============================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=
# Email Unsubscribe
UNSUBSCRIBE_SECRET=

# =============================
# AI Providers
# =============================
OPENAI_API_KEY=

# =============================
# Storage (AWS S3)
# =============================
AWS_REGION=
S3_BUCKET=
AWS_ACCESS_KEY=
AWS_SECRET_ACCESS_KEY=

# =============================
# Payments (Braintree)
# =============================
# BRAINTREE_ENVIRONMENT can be Sandbox or Production
BRAINTREE_ENVIRONMENT=Sandbox
BRAINTREE_MERCHANT_ID=
BRAINTREE_PUBLIC_KEY=
BRAINTREE_PRIVATE_KEY=

# =============================
# Scheduling - Simulation Shortlist
# =============================
# Cron expression. Default every 2 hours.
SIMULATION_SHORTLIST_CRON=0 */2 * * *
# Increase short_listed by this % of no_of_jobs each run (default 10)
SIMULATION_SHORTLIST_INCREMENT_PERCENT=10
# Do not exceed this % of no_of_jobs (default 60)
SIMULATION_SHORTLIST_MAX_PERCENT=60

# =============================
# Scheduling - Weekly Country Suggestions Campaign
# =============================
# Cron expression. Default every Monday at 09:00 server time.
WEEKLY_COUNTRY_CAMPAIGN_CRON=0 9 * * MON
# How many top countries to suggest (default 5)
WEEKLY_COUNTRY_CAMPAIGN_TOP_N=5
# Max emails to send per run to avoid spikes (default 500)
WEEKLY_COUNTRY_CAMPAIGN_BATCH_SIZE=500

# =============================
# Scheduling - Subscribed Country Updates Campaign
# =============================
# Cron expression. Default every Wednesday at 10:00 server time.
SUBSCRIBED_COUNTRY_UPDATES_CRON=0 10 * * WED
# Time window in days to check for new jobs (default 7)
SUBSCRIBED_COUNTRY_UPDATES_WINDOW=7
# Max emails to send per run to avoid spikes (default 500)
SUBSCRIBED_COUNTRY_UPDATES_BATCH_SIZE=500